<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
       	    
	<ListView
	    android:id="@android:id/list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="120dip"/>
	
	<TextView
		android:id="@android:id/empty"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:text="@string/noFileFound" /> 
		
	<LinearLayout 
	    android:layout_height="120dip"
	    android:orientation="vertical"
	    android:layout_marginTop="-120dip"
	    android:layout_width="match_parent">

		<TextView
	  	    android:id="@+id/txtPath"     	       	   
	  	    android:layout_width="match_parent"
	  	    android:layout_height="50dip"	  	    
	  	    android:text=""
	  	    android:paddingLeft="2dp"
	  	    android:paddingRight="2dp"
	  	    android:background="@color/colorPrimary_light"
	  	    android:gravity="left|center_vertical"
	  	    android:textSize="@dimen/textFontSizeSamll" />   	

		<Button
			android:id="@+id/btnReadPath"
			style="@style/Widget.AppCompat.Button.Colored"
			android:textColor="@color/colorTextIcons"
			android:layout_width="wrap_content"
	        android:layout_height="70dip"
	        android:layout_gravity="center_horizontal"
	        android:drawableLeft="@drawable/save"
			android:text="@string/strSelTopFolder" />		
					    	    	    
	</LinearLayout>
	
</LinearLayout>

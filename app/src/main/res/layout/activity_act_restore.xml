<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      
   	<ProgressBar
   	    android:id="@+id/pgBar"
   	    style="?android:attr/progressBarStyleLarge"
   	    android:layout_width="wrap_content"
   	    android:layout_gravity="center_horizontal"
   	    android:visibility="gone"
   	    android:layout_height="wrap_content" />
   	
	<org.kasabeh.raghamcardbank.ui_components.FntTxtViewSimple
  	    android:id="@+id/txtResult"     	       	   
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:paddingTop="10dip"
		android:paddingBottom="10dip"
  	    android:text=""
  	    android:background="@color/colorAccent"
		android:textColor="@color/colorTextIcons"
  	    android:visibility="gone"
  	    android:gravity="center"
  	    android:textSize="@dimen/textFontSizeSamll" />   	
	    	    
	<ListView
	    android:id="@android:id/list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="70dip"/>
	
	<org.kasabeh.raghamcardbank.ui_components.FntTxtView
		android:id="@android:id/empty"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:text="@string/noFileFound" /> 
		
	<Button
		android:id="@+id/btnLoadDt"
		style="@style/Widget.AppCompat.Button.Colored"
		android:textColor="@color/colorTextIcons"
		android:drawableLeft="@drawable/restore_white"
		android:layout_width="wrap_content"
        android:layout_height="70dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-70dip"
		android:text="@string/restore" />		
	
</LinearLayout>
